@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post,  new { id = "logoutForm", @class = "navbar-right" }))
    {
         @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Bem-vindo " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = ""}, htmlAttributes: new { title = "Gerenciar Conta" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrar", "Register", "Account", new { area = ""}, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Login", "Login", "Account", new { area=""}, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
