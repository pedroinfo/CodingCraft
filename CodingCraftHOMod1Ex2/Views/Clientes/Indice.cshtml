@model IEnumerable<EX2.Models.Cliente>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Criar novo", "Criar")
</p>
<table>
    <tr>
        <th></th>
        <th>
            NomeFantasia
        </th>
        <th>
            RazaoSocial
        </th>
        <th>
            Cnpj
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ClienteId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.ClienteId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.ClienteId })
        </td>
        <td>
			@item.NomeFantasia
        </td>
        <td>
			@item.RazaoSocial
        </td>
        <td>
			@item.Cnpj
        </td>
        <td>
			@String.Format("{0:g}", item.DataAbertura)
        </td>
    </tr>
}

</table>


