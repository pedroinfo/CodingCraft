@model EX2.Models.Cliente

@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir</h2>

<h3>Deseja excluir esse registro ?</h3>
<fieldset>
    <legend>Cliente</legend>

    <div class="display-label">NomeFantasia</div>
    <div class="display-field">@Model.NomeFantasia</div>

    <div class="display-label">RazaoSocial</div>
    <div class="display-field">@Model.RazaoSocial</div>

    <div class="display-label">Cnpj</div>
    <div class="display-field">@Model.Cnpj</div>

    <div class="display-label">DataAbertura</div>
    <div class="display-field">@String.Format("{0:g}", Model.DataAbertura)</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Excluir" /> |
        @Html.ActionLink("Voltar", "Index")
    </p>
}


