@model IEnumerable<CodingCraftHOMod1Ex1EF.Models.Vendas>

@{
    ViewBag.Title = "Vendas";
}

<h2>Vendas</h2>

<div class="row">
    <div class="col-lg-4">
        <p>
            @Html.ActionLink("Nova venda", "Create")
        </p>
    </div>
    <div class="col-lg-6">
        @using (Html.BeginForm())
        {
            @Html.Label("Filtrar Cliente: ")
            @Html.TextBox("consulta");
            <button type="submit" class="btn btn-primary">Filtrar</button>
        }
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCompra)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorVenda)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCompra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorVenda)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.VendaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.VendaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.VendaId })
        </td>
    </tr>
}

</table>
