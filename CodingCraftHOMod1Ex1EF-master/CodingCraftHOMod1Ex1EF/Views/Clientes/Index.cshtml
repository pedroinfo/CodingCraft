@model IEnumerable<CodingCraftHOMod1Ex1EF.Models.Clientes>

@{
    ViewBag.Title = "Cadastro de Clientes";
}

<h2>Cadastro de Clientes</h2>



<div class="row">
    <div class="col-lg-4">
        <p>
            @Html.ActionLink("Criar Cliente", "Create")
        </p>
    </div>
    <div class="col-lg-6">
        @using (Html.BeginForm())
        {
            @Html.Label("Filtrar Cliente: ")
            @Html.TextBox("consulta");
            <button type="submit" class="btn btn-primary">Filtrar</button>
        }
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ClienteId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ClienteId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ClienteId })
        </td>
    </tr>
}

</table>
