@using X.PagedList; 
@using X.PagedList.Mvc;

@model EX11.ViewModel.PesquisaViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Pesquisa</h2>

@Html.Partial("_PesquisaPartial", Model)

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IndicadorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoriaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaisId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model.Resultados)
    {
        <tr>
            <td>
                @item.Indicador.Nome
            </td>

            <td>
                @item.Categoria.Nome
            </td>

            <td>
                @item.Pais.Nome
            </td>

            <td>
                @item.Ano
            </td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)Model.Resultados, page => Url.ActionQuery("Index", "Pesquisa", new { page }))


