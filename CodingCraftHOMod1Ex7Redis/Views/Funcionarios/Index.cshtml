@model IEnumerable<CodingCraftHOMod1Ex7Redis.Models.Funcionario>

@{
    ViewBag.Title = "Listagem de funcionários";
}

<h2>Listagem de funcionários</h2>

<p>
    @Html.ActionLink("Novo Funcionário", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.PageFuncionarios)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Cargo</td>
            <td>@item.DataNascimento</td>
            <td>

                <button onclick="location.href='@Url.Action("Edit", new { id = item.FuncionarioId})';return false;" class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit">
                        Editar
                    </span>
                </button>


                <button onclick="location.href='@Url.Action("Details", new { id = item.FuncionarioId})';return false;" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign">
                        Detalhes
                    </span>
                </button>



                <button name="excluir" id=@item.FuncionarioId onclick="location.href='@Url.Action("Delete", new { id = item.FuncionarioId })';return false;" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash red">
                        Excluir
                    </span>
                </button>
            </td>
        </tr>
    }

</table>
