@model IEnumerable<CodingCraftHOMod1Ex7Redis.Models.Categoria>
@using X.PagedList.Mvc;
@using X.PagedList;

@{
    ViewBag.Title = "Listagem de categoriasdex";
}

<h2>Listagem de categorias</h2>

<p>
    @Html.ActionLink("Nova categoria", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.PageCategorias)
    {
        <tr>
            <td>@item.Nome</td>
            <td>

                <button onclick="location.href='@Url.Action("Edit", new { id = item.CategoriaId})';return false;" class="btn btn-primary">
                    <span class="glyphicon glyphicon-edit">
                        Editar
                    </span>
                </button>


                <button onclick="location.href='@Url.Action("Details", new { id = item.CategoriaId})';return false;" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign">
                        Detalhes
                    </span>
                </button>



                <button name="excluir" id=@item.CategoriaId onclick="location.href='@Url.Action("Delete", new { id = item.CategoriaId})';return false;" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash red">
                        Excluir
                    </span>
                </button>
            </td>
        </tr>
    }

</table>

@Html.PagedListPager((IPagedList)ViewBag.PageCategorias, page => Url.Action("Index", new { page }))