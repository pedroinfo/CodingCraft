@model CodingCraftHOMod1Ex7Redis.ViewModels.BancoAgenciaViewModel
@using CodingCraftHOMod1Ex7Redis.Models

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Teste</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.BancoId, "Banco", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BancoId, ((IEnumerable<Banco>)ViewBag.Bancos).Select(opcao => new SelectListItem {
                    Text = opcao.Nome,
                    Value = opcao.BancoId.ToString()
                }), "Selecione...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BancoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AgenciaId, "Agência", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BancoId, new List<AgenciaBancaria>().Select(opcao => new SelectListItem
                {
                    Text = opcao.Nome,
                    Value = opcao.BancoId.ToString()
                }), "Selecione um Banco...", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BancoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
